{
    "user": {
        "_id": {
            "type": "objectId",
            "key": "PrimaryKey"
        },
        "user_name": {
            "type": "string",
            "null": false,
            "blank": false,
            "max_length": 50
        },
        "date_of_birth": {
            "type": "date",
            "null": false,
            "blank": false,
            "custom_validator": "check_date_of_birth"
        },
        "email": {
            "type": "string",
            "null": false,
            "blank": false,
            "unique": true,
            "custom_validator": "check_email"
        },
        "phone_number": {
            "type": "string",
            "null": false,
            "blank": false,
            "unique": true,
            "custom_validator": "check_phone_number"
        },
        "password": {
            "type": "string",
            "null": false,
            "blank": false,
            "min_length": 6,
            "max_length": 12,
            "custom_validator": "check_password"
        },
        "role": {
            "type": "string",
            "null": false,
            "blank": false,
            "default": "Admin",
            "choices": [
                "Admin",
                "Basic User",
                "Premium User"
            ]
        },
        "avatar": {
            "type": "bindata",
            "null": true,
            "blank": true    
        },
        "created_at": {
            "null": false,
            "blank": false,
            "type": "datetime"
        },
        "updated_at": {
            "null": false,
            "blank": false,
            "type": "datetime"
        }
    },
